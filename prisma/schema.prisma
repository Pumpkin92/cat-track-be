generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Pet {
  id Int @id @default(autoincrement())
  name String
  petType String
  breed String
  feeding Food[]
  weight Weight[]
  vaccine Vaccine[]
  treatments Treatments[]
  
@@map("Pet")   
}

model Food {
  id Int @id @default(autoincrement())
  foodId Int
  title String
  created  DateTime @default(now())
  pet        Pet     @relation(fields: [foodId], references: [id], onDelete: Cascade) 
@@map("Food")
}

model Weight {
  id Int @id @default(autoincrement())
  weightId Int
  title String
  created  DateTime @default(now())
  pet        Pet     @relation(fields: [weightId], references: [id], onDelete: Cascade) 
@@map("Weight")
}

model Vaccine {
  id Int @id @default(autoincrement())
  vaccineId Int
  title String
  created  DateTime @default(now())
  pet        Pet     @relation(fields: [vaccineId], references: [id], onDelete: Cascade) 
@@map("Vaccine")
}

model Treatments {
  id Int @id @default(autoincrement())
  treatmentsId Int
  title String
  created  DateTime @default(now())
  pet        Pet     @relation(fields: [treatmentsId], references: [id], onDelete: Cascade) 
@@map("Treatments")
}
